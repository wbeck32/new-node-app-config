{
	"ecmaFeatures": {},
	"env": {
		"node": false,
		"mocha": false,
		"es6": true
	},
	"extends": "eslint:recommended",

	"rules": {
		"no-dupe-keys": 1,
		"no-extra-parens": 1,
		"no-extra-semi": 1,
		"no-irregular-whitespace": 1,
		"dot-notation": 1,
		"no-multi-spaces": 1,
		"vars-on-top": 1,
		"handle-callback-err": 1,
		"new-cap": 1,
		"new-parens": 1,
		"no-var": 1,
		"no-console": "warn",
		"indent": ["error", 4],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"]
	}
}
